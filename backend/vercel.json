{
    "version": 2,
    "builds": [
      {
        "src": "backend/package.json",
        "use": "@vercel/node"
      }
    ],
    "env": {
      "DB_CONNECTION_STRING": "@db_connection_string",
      "EMAIL_USER": "@email_user",
      "EMAIL_PASS": "@email_pass",
      "DB_PASSWORD": "@db_password"
    },
    "routes": [
      {
        "src": "/(.*)",
        "dest": "backend/server.js"
      }
    ]
  }
  